<%= render "devise/shared/navbar" %>

<h6><center> Search the right spaceship for you ðŸš€.</center> </h6>

<br>

<div class="container">
  <div>
    <%= form_tag spaceships_path, method: :get do |form| %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Please enter the capacity you want for your spaceship.."
      %>
      <br>
      <%= submit_tag "Search", class: "btn btn-flat" %>
    <% end %>
  </div>

  <div class="card-list">
    <% @spaceships.each do |spaceship| %>
      <div class="card-product">
        <%= cl_image_tag spaceship.image_url.key, height: 200, width: 200, crop: :fill %>
        <div class="card-text">
          <h2><%= spaceship.name %></h2><br>
          <p><%= spaceship.description  %></p><br>
          <p>Capacity: <%=spaceship.capacity %></p>
        </div>
      </div>
    <% end %>
  </div>

  <br>
  <%= link_to "Add a new spaceship", new_spaceship_path, class: "btn btn-flat" %>
</div>
