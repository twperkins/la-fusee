<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://image.flaticon.com/icons/png/512/2578/2578890.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      <%# test id added to navlink so I can customize the button white %>
        <%= link_to "Search", spaceships_path, class: "nav-link", id: "test" %>
      </li>
      <li class="nav-item">
      <%# test1 id added to navlink so I can customize the button white %>
        <%= link_to "Bookings", bookings_path, class: "nav-link", id: "test" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.image_url.key == nil %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://avatars.githubusercontent.com/u/85560933?s=60&v=4" />
        <% else %>
          <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= cl_image_tag current_user.image_url.key, class: "avatar dropdown-toggle", id: "navbarDropdown", height: 40, width: 300 %></div>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
